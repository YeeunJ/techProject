<form action="./update" method="post" id="setting1">
<div id="setting1">
  <div class="info" id="info_company_first">
    <table>
      <tr class="info_title">
        <td class="info_left">업체 정보</td>
      </tr>
      <tr>
      <tr><td class="info_left">업체명</td>
      <td class="info_company_right"><input type="text" id="companyName" value="<%= data.companyName %>" name = "companyName" class="input" placeholder="업체명" required></td>
      <td>전화번호</td>
      <td class="info_company_right"><input type="text" id="phone" value="<%= data.phone %>" name = "phone" class="input" placeholder="전화번호" required></td>
      <td>주소</td>
      <td class="info_company_right"><input type="text" id="location" value="<%= data.location %>" name = "location" class="input" placeholder="주소" required></td>
      </tr>
    </table>
  </div>
  <hr>

    <div class="info" id="info_camera">
      <table>
        <tr></tr>
        <tr class="info_title">
          <td class="info_left">카메라 정보</td>
        </tr>
        <tr></tr>
        <tr></tr>
        <tr>
          <td class="info_left">카메라 해상도</td>
          <td class="info_camera_middle"><input type="number" id="sizeW" value="<%= data.sizeW %>" name = "sizeW" class="input" placeholder="width" required></td>
          <td><input type="number" id="sizeH" name = "sizeH" value="<%= data.sizeH %>" placeholder="height" required></td>
        </tr>
        <tr>
          <td class="info_left">리사이즈 해상도</td>
          <td class="info_camera_middle"><input type="number" id="resizeW" value="<%= data.resizeW %>" name = "resizeW" class="input" placeholder="width" required></td>
          <td><input type="number" id="resizeH" value="<%= data.resizeH %>" name = "resizeH" placeholder="height" required></td>
        </tr>
        <tr>
          <td class="info_left">카메라 숫자</td>
          <td class="info_camera_middle">
            <input type="number" id="camNum" value="<%= data.camNum %>" name = "camNum" class="input" placeholder="카메라 개수" required>
          </td>
        </tr>
        </table>
      </div>
      <div class="info" id="info_image">
        <table id="info_image_table">
          <tr></tr>
          <tr class="info_title">
            <td class="info_image_left">이미지 저장 정보</td>
          </tr>
          <tr></tr>
          <tr></tr>
         <tr>
           <td class="info_image_left">저장 간격 (초)</td>
           <td class="info_image_right">
              <input class="info_camera" type="number" id="saveInterval" value="<%= data.saveInterval %>" name = "saveInterval" class="input" placeholder="저장 간격 (초)" required>
           </td>
         </tr>
         <tr>
           <td class="info_image_left">최대 저장 갯수 (개)</td>
           <td class="info_image_right">
              <input class="info_camera" type="number" id="saveNum" value="<%= data.saveNum %>" name = "saveNum" class="input" placeholder="최대 저장 갯수 (개)" required>
           </td>
         </tr>
         <tr>
           <td class="info_image_left">최대 저장 기간 (개월)</td>
           <td class="info_image_right">
             <input class="info_camera" type="number" id="savePeriod" value="<%= data.savePeriod %>" name = "savePeriod" class="input" placeholder="최대 저장 기간 (개월)" required>
           </td>
           <td><button class="confirm btn submit" id="confirm">확인</button></td>
         </tr>
       </table>
       </div>
  </div>
  </form>
